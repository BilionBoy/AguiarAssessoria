<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Banco</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_banco %>">
          <p>
            <strong>Nome Fantasia:</strong>
            <%= @g_banco.nome_fantasia %>
          </p>
          <p>
            <strong>Codigo:</strong>
            <%= @g_banco.codigo %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_banco_path(@g_banco), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_bancos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_banco, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
