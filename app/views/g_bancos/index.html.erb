<%= render "shared/context_nav", title: t("activerecord.models.#{GBanco.model_name.i18n_key}.other"), new_path: new_g_banco_path do %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{GBanco.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex ">
    <%= search_form_for @q, html: { class: "d-flex gap-2 ", autocomplete: "off"} do |f| %>
      <%= f.search_field :nome_fantasia_cont, class: "form-control", placeholder: "Pesquisar G Banco" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to tag.i(class: 'ph-x-circle'), g_bancos_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :nome_fantasia, t("activerecord.attributes.g_banco.nome_fantasia")) %></th>
            <th><%= sort_link(@q, :codigo, t("activerecord.attributes.g_banco.codigo")) %></th>
            <th>Cadastro</th>
          </tr>
        </thead>
        <tbody>
          <% @g_bancos.each do |g_banco| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to g_banco_path(g_banco), class: "dropdown-item" do %>
                      <i class="ph-eye me-2"></i> Visualizar
                    <% end %>
                    <%= link_to edit_g_banco_path(g_banco), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for g_banco, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer" data-confirm-delete="<%= g_banco_path(g_banco) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i> Excluir
                      </a>
                    <% end %>
                  </div>
                </div>
              </td>
              <td><%= g_banco.nome_fantasia %></td>
              <td><%= g_banco.codigo %></td>
              <td><%= l(g_banco.created_at, format: :short) if g_banco.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
