<%= render "shared/context_nav", title: t("activerecord.models.#{EEmpresa.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{EEmpresa.model_name.i18n_key}.other"), e_empresas_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@e_empresa) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @e_empresa.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{EEmpresa.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-4">
          <%= f.input :razao_social, input_html: { class: "capitalize"}, placeholder: "Razao social"  %>
        </div>
        <div class="col-4">
          <%= f.input :cnpj, input_html: { class: "capitalize"}, placeholder: "Cnpj"  %>
        </div>
        <div class="col-4">
          <%= f.input :endereco, input_html: { class: "capitalize"}, placeholder: "Endereco"  %>
        </div>
        <div class="col-5">
          <%= f.input :email, input_html: { class: "capitalize"}, placeholder: "Email"  %>
        </div>
        <div class="col-7">
          <%= f.input :telefone, input_html: { class: "capitalize"}, placeholder: "Telefone"  %>
        </div>
        <div class="col-3">
          <%= f.input :g_cidade_id, collection: GCidade.all.order(:nome_fantasia), label_method: :nome_fantasia, value_method: :id,prompt: "Selecione a cidade",input_html: { class: "capitalize" }%>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", e_empresas_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>