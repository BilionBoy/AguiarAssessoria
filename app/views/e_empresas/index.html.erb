<%= render "shared/context_nav", title: t("activerecord.models.#{EEmpresa.model_name.i18n_key}.other"), new_path: new_e_empresa_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{EEmpresa.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :razao_social_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), e_empresas_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :razao_social, t("activerecord.attributes.e_empresa.razao_social")) %></th>
            <th><%= sort_link(@q, :cnpj, t("activerecord.attributes.e_empresa.cnpj")) %></th>
            <th><%= sort_link(@q, :endereco, t("activerecord.attributes.e_empresa.endereco")) %></th>
            <th><%= sort_link(@q, :email, t("activerecord.attributes.e_empresa.email")) %></th>
            <th><%= sort_link(@q, :telefone, t("activerecord.attributes.e_empresa.telefone")) %></th>
            <th><%= sort_link(@q, :g_cidade, t("activerecord.attributes.e_empresa.g_cidade")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @e_empresas.each do |e_empresa| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_e_empresa_path(e_empresa), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for e_empresa, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= e_empresa_path(e_empresa) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= e_empresa.razao_social %></td>
                    <td><%= e_empresa.cnpj %></td>
                    <td><%= e_empresa.endereco %></td>
                    <td><%= e_empresa.email %></td>
                    <td><%= e_empresa.telefone %></td>
                    <td><%= e_empresa.g_cidade %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
