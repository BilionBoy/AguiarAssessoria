<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar E Empresa</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @e_empresa %>">
          <p>
            <strong>Razao Social:</strong>
            <%= @e_empresa.razao_social %>
          </p>
          <p>
            <strong>Cnpj:</strong>
            <%= @e_empresa.cnpj %>
          </p>
          <p>
            <strong>Endereco:</strong>
            <%= @e_empresa.endereco %>
          </p>
          <p>
            <strong>Email:</strong>
            <%= @e_empresa.email %>
          </p>
          <p>
            <strong>Telefone:</strong>
            <%= @e_empresa.telefone %>
          </p>
          <p>
            <strong>G Cidade:</strong>
            <%= @e_empresa.g_cidade %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_e_empresa_path(@e_empresa), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", e_empresas_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @e_empresa, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
