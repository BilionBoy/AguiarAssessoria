<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar E Meta</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @e_meta %>">
          <p>
            <strong>E Empresa:</strong>
            <%= @e_meta.e_empresa %>
          </p>
          <p>
            <strong>User:</strong>
            <%= @e_meta.user %>
          </p>
          <p>
            <strong>Valor Meta:</strong>
            <%= @e_meta.valor_meta %>
          </p>
          <p>
            <strong>Referencia:</strong>
            <%= @e_meta.referencia %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @e_meta.descricao %>
          </p>
          <p>
            <strong>Created By:</strong>
            <%= @e_meta.created_by %>
          </p>
          <p>
            <strong>Updated By:</strong>
            <%= @e_meta.updated_by %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_e_meta_path(@e_meta), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", e_metas_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @e_meta, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
