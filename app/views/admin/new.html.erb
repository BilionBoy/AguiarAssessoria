<style>
  .form-wizard {
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--neutral-200);
    overflow: hidden;
  }

  .wizard-header {
    background: var(--neutral-50);
    padding: 24px 28px;
    border-bottom: 1px solid var(--neutral-200);
  }

  .wizard-steps {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-bottom: 16px;
  }

  .wizard-step {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--neutral-500);
    font-size: 14px;
    font-weight: 500;
  }

  .wizard-step.active {
    color: var(--primary-blue);
  }

  .wizard-step.completed {
    color: var(--success);
  }

  .step-number {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 14px;
    border: 2px solid var(--neutral-300);
    background: white;
  }

  .wizard-step.active .step-number {
    background: var(--primary-blue);
    color: white;
    border-color: var(--primary-blue);
  }

  .wizard-step.completed .step-number {
    background: var(--success);
    color: white;
    border-color: var(--success);
  }

  .wizard-progress {
    height: 4px;
    background: var(--neutral-200);
    border-radius: 2px;
    overflow: hidden;
  }

  .wizard-progress-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--accent-orange) 100%);
    transition: width 0.3s ease;
    width: 33%;
  }

  .wizard-content {
    padding: 32px 28px;
  }

  .form-section {
    margin-bottom: 32px;
  }

  .section-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
  }

  .form-row.two-cols {
    grid-template-columns: 1fr 1fr;
  }

  .form-row.three-cols {
    grid-template-columns: 1fr 1fr 1fr;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-label {
    font-size: 14px;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .form-label.required::after {
    content: '*';
    color: var(--error);
    margin-left: 4px;
  }

  .form-input {
    padding: 14px 16px;
    border: 1px solid var(--neutral-300);
    border-radius: 10px;
    font-size: 14px;
    transition: var(--transition);
    background: white;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
  }

  .form-input.error {
    border-color: var(--error);
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
  }

  .form-select {
    padding: 14px 16px;
    border: 1px solid var(--neutral-300);
    border-radius: 10px;
    font-size: 14px;
    background: white;
    cursor: pointer;
    transition: var(--transition);
  }

  .form-select:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
  }

  .form-textarea {
    padding: 14px 16px;
    border: 1px solid var(--neutral-300);
    border-radius: 10px;
    font-size: 14px;
    resize: vertical;
    min-height: 100px;
    font-family: inherit;
    transition: var(--transition);
  }

  .form-textarea:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
  }

  .form-help {
    font-size: 12px;
    color: var(--neutral-500);
  }

  .form-error {
    font-size: 12px;
    color: var(--error);
    font-weight: 500;
  }

  .file-upload {
    border: 2px dashed var(--neutral-300);
    border-radius: 10px;
    padding: 24px;
    text-align: center;
    transition: var(--transition);
    cursor: pointer;
  }

  .file-upload:hover {
    border-color: var(--primary-blue);
    background: var(--primary-blue-light);
  }

  .file-upload-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 12px;
    color: var(--neutral-400);
  }

  .file-upload-text {
    color: var(--neutral-600);
    font-weight: 500;
    margin-bottom: 4px;
  }

  .file-upload-hint {
    color: var(--neutral-500);
    font-size: 12px;
  }

  .wizard-actions {
    padding: 24px 28px;
    background: var(--neutral-50);
    border-top: 1px solid var(--neutral-200);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .btn-group {
    display: flex;
    gap: 12px;
  }

  .modern-btn-outline {
    background: white;
    color: var(--neutral-600);
    border: 1px solid var(--neutral-300);
  }

  .modern-btn-outline:hover {
    background: var(--neutral-100);
    color: var(--neutral-700);
    border-color: var(--neutral-400);
  }

  @media (max-width: 768px) {
    .wizard-steps {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .form-row,
    .form-row.two-cols,
    .form-row.three-cols {
      grid-template-columns: 1fr;
    }

    .wizard-content {
      padding: 24px 20px;
    }

    .wizard-actions {
      padding: 20px;
      flex-direction: column;
      gap: 16px;
    }

    .btn-group {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
<div class="modern-dashboard">
  <!-- Header -->
  <div class="page-header clients-header shadow-sm">
    <div class="page-header-content d-lg-flex">
      <div class="d-flex">
        <div class="breadcrumb modern-breadcrumb py-3">
          <a href="<%= root_path %>" class="breadcrumb-item">
            <i data-lucide="home" style="width: 16px; height: 16px;"></i>
          </a>
          <a href="<%= root_path %>" class="breadcrumb-item">Clientes</a>
          <span class="breadcrumb-item active">Novo Cliente</span>
        </div>
      </div>
    </div>
  </div>
  <div class="content" style="padding: 32px 24px;">
    <form class="form-wizard">
      <!-- Header do Wizard -->
      <div class="wizard-header">
        <div class="wizard-steps">
          <div class="wizard-step active">
            <div class="step-number">1</div>
            <span>Dados Pessoais</span>
          </div>
          <div class="wizard-step">
            <div class="step-number">2</div>
            <span>Endereço</span>
          </div>
          <div class="wizard-step">
            <div class="step-number">3</div>
            <span>Documentos</span>
          </div>
        </div>
        <div class="wizard-progress">
          <div class="wizard-progress-bar"></div>
        </div>
      </div>
      <!-- Conteúdo do Formulário -->
      <div class="wizard-content">
        <!-- Etapa 1: Dados Pessoais -->
        <div class="wizard-step-content active" id="step1">
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="user" style="width: 20px; height: 20px;"></i>
              Informações Básicas
            </h3>
            <div class="form-row two-cols">
              <div class="form-group">
                <label class="form-label required">Nome Completo</label>
                <input type="text" class="form-input" name="nome" placeholder="Digite o nome completo">
                <div class="form-help">Nome como consta nos documentos</div>
              </div>
              <div class="form-group">
                <label class="form-label required">CPF</label>
                <input type="text" class="form-input" name="cpf" placeholder="000.000.000-00" data-mask="000.000.000-00">
              </div>
            </div>
            <div class="form-row three-cols">
              <div class="form-group">
                <label class="form-label required">Data de Nascimento</label>
                <input type="date" class="form-input" name="data_nascimento">
              </div>
              <div class="form-group">
                <label class="form-label required">Estado Civil</label>
                <select class="form-select" name="estado_civil">
                  <option value="">Selecione...</option>
                  <option value="solteiro">Solteiro(a)</option>
                  <option value="casado">Casado(a)</option>
                  <option value="divorciado">Divorciado(a)</option>
                  <option value="viuvo">Viúvo(a)</option>
                </select>
              </div>
              <div class="form-group">
                <label class="form-label required">Sexo</label>
                <select class="form-select" name="sexo">
                  <option value="">Selecione...</option>
                  <option value="M">Masculino</option>
                  <option value="F">Feminino</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="phone" style="width: 20px; height: 20px;"></i>
              Contato
            </h3>
            <div class="form-row three-cols">
              <div class="form-group">
                <label class="form-label required">Telefone Principal</label>
                <input type="text" class="form-input" name="telefone" placeholder="(00) 00000-0000" data-mask="(00) 00000-0000">
              </div>
              <div class="form-group">
                <label class="form-label">Telefone Secundário</label>
                <input type="text" class="form-input" name="telefone2" placeholder="(00) 00000-0000" data-mask="(00) 00000-0000">
              </div>
              <div class="form-group">
                <label class="form-label required">Email</label>
                <input type="email" class="form-input" name="email" placeholder="cliente@email.com">
              </div>
            </div>
          </div>
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="briefcase" style="width: 20px; height: 20px;"></i>
              Informações Profissionais
            </h3>
            <div class="form-row two-cols">
              <div class="form-group">
                <label class="form-label">Profissão</label>
                <input type="text" class="form-input" name="profissao" placeholder="Ex: Servidor Público">
              </div>
              <div class="form-group">
                <label class="form-label">Renda Mensal</label>
                <input type="text" class="form-input" name="renda" placeholder="R$ 0,00" data-mask-money>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label class="form-label">Observações</label>
                <textarea class="form-textarea" name="observacoes" placeholder="Informações adicionais sobre o cliente..."></textarea>
              </div>
            </div>
          </div>
        </div>
        <!-- Etapa 2: Endereço -->
        <div class="wizard-step-content" id="step2" style="display: none;">
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="map-pin" style="width: 20px; height: 20px;"></i>
              Endereço Residencial
            </h3>
            <div class="form-row three-cols">
              <div class="form-group">
                <label class="form-label required">CEP</label>
                <input type="text" class="form-input" name="cep" placeholder="00000-000" data-mask="00000-000">
                <div class="form-help">Digite o CEP para buscar automaticamente</div>
              </div>
              <div class="form-group">
                <label class="form-label required">Estado</label>
                <select class="form-select" name="estado">
                  <option value="">Selecione...</option>
                  <option value="SP">São Paulo</option>
                  <option value="RJ">Rio de Janeiro</option>
                  <option value="MG">Minas Gerais</option>
                  <!-- Outros estados -->
                </select>
              </div>
              <div class="form-group">
                <label class="form-label required">Cidade</label>
                <input type="text" class="form-input" name="cidade" placeholder="Nome da cidade">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label class="form-label required">Logradouro</label>
                <input type="text" class="form-input" name="logradouro" placeholder="Rua, Avenida, etc.">
              </div>
            </div>
            <div class="form-row three-cols">
              <div class="form-group">
                <label class="form-label required">Número</label>
                <input type="text" class="form-input" name="numero" placeholder="123">
              </div>
              <div class="form-group">
                <label class="form-label">Complemento</label>
                <input type="text" class="form-input" name="complemento" placeholder="Apto, Bloco, etc.">
              </div>
              <div class="form-group">
                <label class="form-label required">Bairro</label>
                <input type="text" class="form-input" name="bairro" placeholder="Nome do bairro">
              </div>
            </div>
          </div>
        </div>
        <!-- Etapa 3: Documentos -->
        <div class="wizard-step-content" id="step3" style="display: none;">
          <div class="form-section">
            <h3 class="section-title">
              <i data-lucide="file-text" style="width: 20px; height: 20px;"></i>
              Upload de Documentos
