<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="row shadow-lg rounded-4 overflow-hidden w-100" style="max-width: 1200px; min-height: 600px;">
    <!-- Lado esquerdo: Branding / SimpliConsig -->
    <div class="col-md-6 d-none d-md-flex flex-column justify-content-center align-items-center text-white bg-primary p-5" style="background: linear-gradient(135deg, #4e73df, #224abe);">
      <div class="text-center">
        <h1 class="display-4 fw-bold mb-3">SimpliConsig</h1>
        <p class="lead mb-4">O sistema CRM completo para gestão de consignados, contratos e metas.</p>
        <img src="/assets/logo_simpliconsig_white.png" alt="Logo SimpliConsig" class="img-fluid mb-4" style="max-height: 120px;">
        <p class="small opacity-75">Organize seus clientes, contratos e metas de forma simples e eficiente.</p>
      </div>
    </div>
    <!-- Lado direito: Formulário de registro -->
    <div class="col-md-6 bg-white p-5">
      <h1 class="text-center mb-3 fw-bold">Crie sua conta</h1>
      <p class="text-center text-muted mb-4">Preencha todos os campos abaixo para se registrar</p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <%= f.error_notification class: "alert alert-danger" %>
        <!-- Credenciais -->
        <div class="row g-3 mb-3">
          <div class="col-md-6">
            <%= f.input :email, required: true, autofocus: true, label: "Email",input_html: { class: "form-control form-control-lg", autocomplete: "email" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :nome_completo, required: true, label: "Nome completo",input_html: { placeholder: "Ex: João da Silva", class: "form-control form-control-lg" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password, required: true, label: "Senha", hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),input_html: { class: "form-control form-control-lg", autocomplete: "new-password" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation, required: true, label: "Confirme a senha",input_html: { class: "form-control form-control-lg", autocomplete: "new-password" } %>
          </div>
        </div>
        <!-- Dados pessoais -->
        <div class="row g-3 mb-3">
          <div class="col-md-6">
            <%= f.input :cpf, required: true, label: "CPF",input_html: { maxlength: 11, placeholder: "Somente números", class: "form-control form-control-lg" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :telefone, required: true, label: "Telefone",input_html: { placeholder: "(99) 99999-9999", class: "form-control form-control-lg" } %>
          </div>
        </div>
        <!-- Informações corporativas -->
        <div class="row g-3 mb-4">
          <div class="col-md-6">
            <%= f.input :g_tipo_usuario_id, required: true, label: "Tipo de Usuário",collection: GTipoUsuario.all, prompt: "Selecione o tipo de usuário", label_method: :descricao, value_method: :id,input_html: { class: "form-select form-select-lg" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :e_empresa_id, required: true, label: "Empresa", collection: EEmpresa.all,prompt: "Selecione a empresa", label_method: :razao_social, value_method: :id, input_html: { class: "form-select form-select-lg" } %>
          </div>
        </div>
        <!-- Botão -->
        <div class="d-grid mb-3">
          <%= f.button :submit, "Criar conta", class: "btn btn-primary btn-lg fw-bold" %>
        </div>
      <% end %>
      <!-- Link para login -->
      <div class="text-center text-muted mt-3">
        Já possui uma conta? <%= link_to "Entre aqui", new_session_path(resource_name), class: "text-decoration-none fw-semibold" %>
      </div>
    </div>
  </div>
</div>
