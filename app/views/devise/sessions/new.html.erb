<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="row shadow-lg rounded-4 overflow-hidden w-100" style="max-width: 1200px; min-height: 600px;">
    <!-- Lado esquerdo: Branding / SimpliConsig -->
    <div class="col-md-6 d-none d-md-flex flex-column justify-content-center align-items-center text-white bg-primary p-5" style="background: linear-gradient(135deg, #4e73df, #224abe);">
      <div class="text-center">
        <h1 class="display-4 fw-bold mb-3">SimpliConsig</h1>
        <p class="lead mb-4">O sistema CRM completo para gestão de consignados, contratos e metas.</p>
        <img src="/assets/logo_simpliconsig_white.png" alt="Logo SimpliConsig" class="img-fluid mb-4" style="max-height: 120px;">
        <p class="small opacity-75">Organize seus clientes, contratos e metas de forma simples e eficiente.</p>
      </div>
    </div>
    <!-- Lado direito: Formulário de login -->
    <div class="col-md-6 bg-white p-5">
      <h1 class="text-center mb-3 fw-bold">Faça login</h1>
      <p class="text-center text-muted mb-4">Acesse sua conta para continuar</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <%= f.error_notification class: "alert alert-danger" %>
        <div class="row g-3 mb-3">
          <div class="col-12">
            <%= f.input :email, required: true, label: "Email",
                        input_html: { class: "form-control form-control-lg", autocomplete: "email", autofocus: true, placeholder: "Digite seu email" } %>
          </div>
          <div class="col-12">
            <%= f.input :password, required: true, label: "Senha",
                        input_html: { class: "form-control form-control-lg", autocomplete: "current-password", placeholder: "Digite sua senha" } %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="col-12 form-check mb-3">
              <%= f.input :remember_me, as: :boolean, label: "Lembrar-me", wrapper_html: { class: "form-check" }, input_html: { class: "form-check-input" } %>
            </div>
          <% end %>
        </div>
        <div class="d-grid mb-3">
          <%= f.button :submit, "Entrar", class: "btn btn-primary btn-lg fw-bold" %>
        </div>
      <% end %>
      <div class="text-center text-muted mt-3">
        Não possui uma conta? <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "text-decoration-none fw-semibold" %>
      </div>
    </div>
  </div>
</div>
