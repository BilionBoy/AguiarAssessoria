<div class="auth-wrapper">
  <div class="auth-background"></div>
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="auth-logo">
          <img src="/layout/assets/img/android-chrome-192x192.png" alt="Aguiar Assessoria">
        </div>
        <h1 class="auth-title">SimpliConsig</h1>
        <p class="auth-subtitle">
          Gestão inteligente de crédito consignado
        </p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        html: { class: "auth-form", novalidate: true }) do |f| %>
        <% if resource.errors.any? %>
          <div class="auth-errors">
            <strong>⚠️ Verifique os erros:</strong>
            <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-inputs">
          <%= f.input :email,    label: "E-mail", required: true, input_html: {autocomplete: "email",placeholder: "Digite seu e-mail",class: "auth-input"} %>
          <%= f.input :password, label: "Senha", required: true, input_html: { autocomplete: "current-password", placeholder: "Digite sua senha", class: "auth-input"} %>
          <% if devise_mapping.rememberable? %>
            <div class="remember-row">
              <%= f.input :remember_me, as: :boolean, label: "Lembrar de mim" %>
              <%= link_to "Esqueceu a senha?", new_password_path(resource_name) %>
            </div>
          <% end %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Entrar",
            class: "btn  btn-login",
            data: { disable_with: "Entrando..." } %>
        </div>
      <% end %>
      <% if devise_mapping.registerable? %>
        <div class="auth-footer">
          Ainda não tem conta?
          <%= link_to "Criar agora", new_registration_path(resource_name) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
