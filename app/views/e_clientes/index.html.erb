  .page-header-content {
  position: relative;
  padding: 0 var(--page-header-padding-x);
  background: linear-gradient(
    135deg,
    var(--primary-blue) 0%,
    var(--primary-blue-dark) 100%
  );
  border: none;
  }

  .modern-table td{
    font-size: 14px;
    font-weight: 500;
    color: var(--neutral-900);
   }
