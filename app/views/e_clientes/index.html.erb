    display: flex;
    width: 100%;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .search-input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .search-inputs-inline {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .form-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #555;
  }

  .form-input-fluid {
    height: 40px;
    padding: 0 0.75rem;
    border-radius: 8px;
    border: 1px solid #dcdcdc;
    min-width: 200px;
  }

  .form-actions-fluid {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  /* ====== RESTANTE DO CSS ORIGINAL (INALTERADO) ====== */

  .table-container-fluid {
    overflow-x: auto;
  }

  .actions-col {
    width: 140px;
    text-align: center;
  }

  .row-actions {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .action-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-blue);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
  }

  .action-icon:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .action-icon.danger {
    color: #dc2626;
  }

  .sticky-right {
    position: sticky;
    right: 0;
    background: white;
    box-shadow: -4px 0 6px rgba(0, 0, 0, 0.05);
    z-index: 2;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-item {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.875rem;
  }

  .breadcrumb-item.active {
    color: white;
    font-weight: 600;
  }

  .page-header {
    background: linear-gradient(
      135deg,
      var(--primary-blue) 0%,
      var(--primary-blue-dark) 100%
    );
  }

  .page-header-content {
    padding: 1rem 1.5rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  /* ===== SEARCH – UX MELHORADA, SEM QUEBRAR PADRÃO ===== */

  .search-section-fluid {
  background: #fff;
  border-radius: 14px;
  padding: 1.25rem 1.5rem;
  margin-bottom: 1.5rem;
  box-shadow: var(--shadow-sm);
  }

  /* layout mais natural */
  .search-filters-fluid {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1.25rem;
  }

  /* formulário mais limpo */
  .filter-form-fluid {
  display: flex;
  width: 100%;
  align-items: flex-end;
  gap: 1rem;
  }

  /* grupo do input */
  .search-input-group {
  flex: 1;
  gap: 0.35rem;
  }

  /* label mais sutil (menos “form”) */
  .form-label {
  font-size: 0.7rem;
  font-weight: 600;
  color: #64748b;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  }

  /* wrapper para ícone */
  .search-input-wrapper {
  position: relative;
  }

  /* ícone dentro do input */
  .search-input-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  width: 16px;
  height: 16px;
  color: #94a3b8;
  pointer-events: none;
  }

  /* input mais confortável e moderno */
  .form-input-fluid {
  height: 44px;
  padding: 0 14px 0 38px;
  border-radius: 10px;
  border: 1px solid #e2e8f0;
  min-width: 280px;
  font-size: 0.9rem;
  transition: all 0.2s ease;
  }

  .form-input-fluid:focus {
  outline: none;
  border-color: var(--primary-blue);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.12);
  }

  /* ações alinhadas e sem peso excessivo */
  .form-actions-fluid {
  display: flex;
  gap: 0.5rem;
  align-items: center;
  }

  /* botão limpar mais discreto */
  .form-actions-fluid .btn-secondary {
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  color: #475569;
  }

  .form-actions-fluid .btn-secondary:hover {
  background: #f1f5f9;
  }
</style>
