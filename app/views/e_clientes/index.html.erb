<div class="modern-dashboard">
  <div class="page-header e_clientes-header">
    <div class="page-header-content">
      <div class="breadcrumb-wrapper">
        <div class="breadcrumb modern-breadcrumb">
          <a href="/" class="breadcrumb-item">
            <i data-lucide="home"></i>
          </a>
          <span class="breadcrumb-item active">
            <%= t("activerecord.models.#{ECliente.model_name.i18n_key}.other") %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="content-fluid">
    <!-- SEARCH FORM (PADRÃO CONTRATOS) -->
    <div class="search-section-fluid">
      <div class="search-filters-fluid">
        <%= search_form_for @q, html: { class: "filter-form-fluid", autocomplete: "off" } do |f| %>
          <div class="search-input-group">
            <label class="form-label">Buscar Clientes</label>
            <div class="search-input-wrapper">
              <i data-lucide="search" class="search-input-icon"></i>
              <%= f.search_field :nome_completo_or_cpf_cont,
      class: "form-input-fluid",
      placeholder: "Digite nome ou CPF..." %>
            </div>
          </div>
          <div class="form-actions-fluid">
            <button type="submit" class="btn btn-primary">
              <i data-lucide="search"></i>
              Buscar
            </button>
            <% if params[:q].present? %>
              <%= link_to e_clientes_path, class: "btn btn-secondary" do %>
                <i data-lucide="x-circle"></i>
                Limpar
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- TABELA (INALTERADA) -->
    <div class="table-section-fluid">
      <div class="table-header-fluid">
        <h3 class="table-title">
          <i data-lucide="list"></i> Lista de Clientes
        </h3>
        <div class="table-actions">
          <%= link_to new_e_cliente_path, class: "btn btn-new" do %>
            <i data-lucide="plus"></i> Novo Cliente
          <% end %>
        </div>
      </div>
      <div class="table-container-fluid">
        <table class="data-table-fluid">
          <thead>
            <tr>
              <th class="checkbox-col">
                <input type="checkbox" id="selectAll" onchange="toggleSelectAll()">
              </th>
              <th>Empresa</th>
              <th>Nome</th>
              <th>CPF</th>
              <th>Matrícula</th>
              <th>Última Margem</th>
              <th>Ano Admissão</th>
              <th class="actions-col sticky-right">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @e_clientes.each do |e_cliente| %>
              <tr>
                <td>
                  <input type="checkbox" class="e_cliente-checkbox" value="<%= e_cliente.id %>">
                </td>
                <td><%= e_cliente.e_empresa&.nome_fantasia %></td>
                <td><%= e_cliente.nome_completo %></td>
                <td><%= e_cliente.cpf %></td>
                <td><%= e_cliente.matricula %></td>
                <td><%= e_cliente.ultima_margem %></td>
                <td><%= e_cliente.ano_admissao %></td>
                <td class="actions-col sticky-right">
                  <div class="row-actions">
                    <%= link_to e_cliente_path(e_cliente), class: "action-icon", title: "Visualizar" do %>
                      <i data-lucide="eye"></i>
                    <% end %>
                    <%= link_to edit_e_cliente_path(e_cliente), class: "action-icon", title: "Editar" do %>
                      <i data-lucide="edit"></i>
                    <% end %>
                    <%= button_to e_cliente_path(e_cliente),
                          method: :delete,
                          data: { confirm: "Tem certeza?" },
                          class: "action-icon danger",
                          title: "Excluir" do %>
                      <i data-lucide="trash-2"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- Paginação -->
      <% if respond_to?(:pagy_bootstrap_nav) && defined?(@pagy) %>
        <div class="pagination-wrapper-fluid">
          <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="pagination-link"').html_safe %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<style>
