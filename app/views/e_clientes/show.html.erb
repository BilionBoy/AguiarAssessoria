<div class="container e-cliente-show">
  <div class="card shadow-sm border-0">
    <!-- HEADER -->
    <div class="card-header bg-white border-0 pb-0">
      <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
        <div>
          <h2 class="cliente-nome">
            <%= @e_cliente.nome_completo %>
          </h2>
          <div class="cliente-subinfo">
            CPF <strong><%= @e_cliente.cpf %></strong>
            • Matrícula <strong><%= @e_cliente.matricula %></strong>
          </div>
        </div>
        <div class="cliente-actions">
          <%= link_to edit_e_cliente_path(@e_cliente), class: "btn btn-primary" do %>
            <i data-lucide="edit"></i> Editar
          <% end %>
          <%= link_to e_clientes_path, class: "btn btn-secondary" do %>
            Voltar
          <% end %>
        </div>
      </div>
    </div>
    <!-- BODY -->
    <div class="card-body">
      <!-- DADOS PESSOAIS -->
      <div class="info-section">
        <h5 class="section-title">Dados Pessoais</h5>
        <div class="info-grid">
          <div class="info-item">
            <span>Nome Social</span>
            <strong><%= @e_cliente.nome_social.presence || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Data de Nascimento</span>
            <strong><%= @e_cliente.data_nascimento || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Sexo</span>
            <strong><%= @e_cliente.g_sexo&.descricao || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Alfabetizado</span>
            <strong><%= @e_cliente.alfabetizado ? "Sim" : "Não" %></strong>
          </div>
        </div>
      </div>
      <!-- CONTATO -->
      <div class="info-section">
        <h5 class="section-title">Contato</h5>
        <div class="info-grid">
          <div class="info-item">
            <span>Email</span>
            <strong><%= @e_cliente.email.presence || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Telefone</span>
            <strong><%= @e_cliente.telefone.presence || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Endereço</span>
            <strong><%= @e_cliente.endereco.presence || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Bairro</span>
            <strong><%= @e_cliente.g_bairro&.descricao || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Cidade</span>
            <strong>
              <%= @e_cliente.g_cidade&.nome_fantasia || "-" %>
            </strong>
          </div>
        </div>
      </div>
      <!-- VÍNCULO PROFISSIONAL -->
      <div class="info-section">
        <h5 class="section-title">Vínculo Profissional</h5>
        <div class="info-grid">
          <div class="info-item">
            <span>Empresa</span>
            <strong><%= @e_cliente.e_empresa&.nome_fantasia %></strong>
          </div>
          <div class="info-item">
            <span>Órgão</span>
            <strong><%= @e_cliente.g_orgao&.descricao || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Ano de Admissão</span>
            <strong><%= @e_cliente.ano_admissao || "-" %></strong>
          </div>
        </div>
      </div>
      <!-- BENEFÍCIO / MARGEM -->
      <div class="info-section">
        <h5 class="section-title">Benefício e Margem</h5>
        <div class="info-grid">
          <div class="info-item">
            <span>Tipo de Benefício</span>
            <strong><%= @e_cliente.g_tipo_beneficio&.descricao || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Número do Benefício</span>
            <strong><%= @e_cliente.numero_beneficio.presence || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Última Margem</span>
            <strong><%= @e_cliente.ultima_margem || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Data da Última Margem</span>
            <strong><%= @e_cliente.data_ultima_margem || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Pensionista</span>
            <strong><%= @e_cliente.pensionista ? "Sim" : "Não" %></strong>
          </div>
          <div class="info-item">
            <span>Representante Legal</span>
            <strong><%= @e_cliente.possui_representante_legal ? "Sim" : "Não" %></strong>
          </div>
        </div>
      </div>
      <!-- CONTROLE DO SISTEMA -->
      <div class="info-section">
        <h5 class="section-title">Controle do Sistema</h5>
        <div class="info-grid">
          <div class="info-item">
            <span>Status do Cliente</span>
            <strong><%= @e_cliente.g_status_cliente&.descricao || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Criado por</span>
            <strong><%= @e_cliente.created_by || "-" %></strong>
          </div>
          <div class="info-item">
            <span>Atualizado por</span>
            <strong><%= @e_cliente.updated_by || "-" %></strong>
          </div>
        </div>
      </div>
    </div>
    <!-- FOOTER -->
    <div class="card-footer bg-white border-0 d-flex justify-content-end">
      <%= button_to @e_cliente,
            method: :delete,
            data: { confirm: "Tem certeza?" },
            class: "btn btn-outline-danger" do %>
        <i data-lucide="trash-2"></i> Excluir
      <% end %>
    </div>
  </div>
</div>
<style>
  .e-cliente-show {
  max-width: 1200px;
  }

  .cliente-nome {
  font-weight: 700;
  margin-bottom: 0.25rem;
  }

  .cliente-subinfo {
  font-size: 0.85rem;
  color: #64748b;
  }

  .cliente-actions {
  display: flex;
  gap: 0.5rem;
  }

  .info-section {
  margin-bottom: 2rem;
  }

  .section-title {
  font-size: 0.9rem;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 0.75rem;
  border-bottom: 1px solid #e5e7eb;
  padding-bottom: 0.25rem;
  }

  .info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 1rem;
  }

  .info-item {
  background: #f8fafc;
  border-radius: 10px;
  padding: 0.75rem 0.9rem;
  display: flex;
  flex-direction: column;
  gap: 0.15rem;
  }

  .info-item span {
  font-size: 0.7rem;
  text-transform: uppercase;
  color: #64748b;
  letter-spacing: 0.04em;
  }

  .info-item strong {
  font-size: 0.9rem;
  font-weight: 600;
  color: #0f172a;
  }

  .cliente-nome {
    color: black;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }
</style>