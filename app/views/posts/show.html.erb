<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Post</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @post %>">
          <p>
            <strong>Titulo:</strong>
            <%= @post.titulo %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @post.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_post_path(@post), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", posts_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @post, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
