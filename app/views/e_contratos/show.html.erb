<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar E Contrato</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @e_contrato %>">
          <p>
            <strong>E Empresa:</strong>
            <%= @e_contrato.e_empresa %>
          </p>
          <p>
            <strong>E Cliente:</strong>
            <%= @e_contrato.e_cliente %>
          </p>
          <p>
            <strong>User:</strong>
            <%= @e_contrato.user %>
          </p>
          <p>
            <strong>Numero Contrato:</strong>
            <%= @e_contrato.numero_contrato %>
          </p>
          <p>
            <strong>G Banco:</strong>
            <%= @e_contrato.g_banco %>
          </p>
          <p>
            <strong>G Status Contrato:</strong>
            <%= @e_contrato.g_status_contrato %>
          </p>
          <p>
            <strong>G Tipo Operacao:</strong>
            <%= @e_contrato.g_tipo_operacao %>
          </p>
          <p>
            <strong>Produto:</strong>
            <%= @e_contrato.produto %>
          </p>
          <p>
            <strong>Valor Total:</strong>
            <%= @e_contrato.valor_total %>
          </p>
          <p>
            <strong>Quantidade Parcelas:</strong>
            <%= @e_contrato.quantidade_parcelas %>
          </p>
          <p>
            <strong>Valor Parcela:</strong>
            <%= @e_contrato.valor_parcela %>
          </p>
          <p>
            <strong>Valor Comissao:</strong>
            <%= @e_contrato.valor_comissao %>
          </p>
          <p>
            <strong>Data Inicio:</strong>
            <%= @e_contrato.data_inicio %>
          </p>
          <p>
            <strong>Data Fim:</strong>
            <%= @e_contrato.data_fim %>
          </p>
          <p>
            <strong>User Created:</strong>
            <%= @e_contrato.user_created %>
          </p>
          <p>
            <strong>User Updated:</strong>
            <%= @e_contrato.user_updated %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_e_contrato_path(@e_contrato), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", e_contratos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @e_contrato, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
